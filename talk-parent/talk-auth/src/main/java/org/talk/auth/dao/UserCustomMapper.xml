<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.talk.auth.dao.UserCustomMapper">

    <update id="orFields">
        update user set fields=fields|#{fields} where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        and deleted_id=0
    </update>
    <update id="andFields">
        update user set fields=fields &amp; #{fields} where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        and deleted_id=0
    </update>
</mapper>